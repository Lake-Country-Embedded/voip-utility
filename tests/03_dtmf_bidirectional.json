{
  "name": "DTMF Bidirectional",
  "description": "Test DTMF transmission in both directions. Caller sends 123, receiver sends 456. Verifies full-duplex DTMF.",
  "timeout": 30,

  "caller": {
    "account": "ext6010",
    "uri": "sip:6011@192.168.10.10",
    "timeout": 10,
    "actions": [
      {"action": "wait", "seconds": 1},
      {"action": "send_dtmf", "digits": "123"},
      {"action": "wait", "seconds": 3},
      {"action": "hangup", "code": 200}
    ]
  },

  "receiver": {
    "account": "ext6011",
    "auto_answer": true,
    "timeout": 15,
    "actions": [
      {"action": "expect_dtmf", "pattern": "123", "timeout": 10},
      {"action": "wait", "seconds": 0.5},
      {"action": "send_dtmf", "digits": "456"}
    ]
  },

  "expect": {
    "connected": true
  }
}
