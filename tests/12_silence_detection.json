{
  "name": "Silence Detection (Negative Test)",
  "description": "Play silence file and verify no beeps are detected. Tests false positive rejection in beep detection.",
  "timeout": 25,

  "caller": {
    "account": "ext6010",
    "uri": "sip:6011@192.168.10.10",
    "timeout": 10,
    "actions": [
      {"action": "wait", "seconds": 0.5},
      {"action": "play_audio", "file": "test_audio/silence_1sec.wav"},
      {"action": "wait", "seconds": 3},
      {"action": "hangup", "code": 200}
    ]
  },

  "receiver": {
    "account": "ext6011",
    "auto_answer": true,
    "timeout": 15,
    "actions": [
      {"action": "record_audio", "file": "recordings/12_silence.wav"}
    ]
  },

  "expect": {
    "connected": true,
    "beep_count": 0
  }
}
