{
  "name": "Beep Detection Test",
  "description": "Call between ext6010 and ext6011 to verify beep detection works",
  "timeout": 30,
  "caller": {
    "account": "ext6010",
    "uri": "sip:6011@192.168.10.10",
    "timeout": 15,
    "actions": [
      {"action": "wait", "seconds": 0.5},
      {"action": "play_audio", "file": "test_audio/beep_1000hz.wav"},
      {"action": "wait", "seconds": 3},
      {"action": "hangup", "code": 200}
    ]
  },
  "receiver": {
    "account": "ext6011",
    "auto_answer": true,
    "timeout": 15,
    "actions": [
      {"action": "record_audio", "file": "recordings/beep_test_recording.wav"}
    ]
  },
  "expect": {
    "connected": true,
    "beep_count": 1,
    "beep_frequency": 1000
  }
}
